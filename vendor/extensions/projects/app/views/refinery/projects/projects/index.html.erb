<% @projects.each do |project| %>
  <section class="project-preview">
    <section class="picture">
      <% if project.pictures.present? %>
        <%= link_to refinery.projects_project_path(project) do %>
          <%= image_fu project.pictures.first.image, "600x6000" %>
        <% end %>
      <% end %>
    </section>
    <section class="project-name">
      <%= link_to project.title,
                  refinery.projects_project_path(project),
                  class: "js-project-title" %>
    </section>
    <section class="project-fields">
      <%= project.fields %>
    </section>
  </section>
<% end %>