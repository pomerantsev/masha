<h1>
  <%= @project.title %>
</h1>

<section class="project-description">
  <h1>Description</h1>
  <p>
    <%=raw @project.description %>
  </p>
</section>

<section class="project-fields">
  <h1>Fields</h1>
  <p>
    <%=raw @project.fields %>
  </p>
</section>

<% @project.pictures.each do |picture| %>
  <section>
    <p>
      <%= image_fu picture.image, "600x6000" %>
    </p>
  </section>
<% end %>

<section class="other-projects-previews">
  <% @other_projects_with_pictures.each do |project| %>
    <p>
      <%= image_fu project.pictures.first.image, "600x6000" %>
    </p>
  <% end %>
</section>

<% content_for :third_column do %>
  <h2><%= t('.other') %></h2>
  <ul class="projects-list">
    <% @projects.each do |project| %>
      <li class="<%= 'selected' if project == @project %>">
        <%= link_to project.title, refinery.projects_project_path(project) %>
      </li>
    <% end %>
  </ul>
<% end %>
