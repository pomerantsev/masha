<% content_for :title, @project.title %>

<h2>
  <%= @project.title %>
</h2>

<section class="project-info">
  <section class="project-description">
    <h3>Description</h3>
    <p>
      <%=raw @project.description %>
    </p>
  </section>

  <section class="project-fields">
    <h3>Fields</h3>
    <p>
      <%=raw @project.fields %>
    </p>
  </section>
</section>

<section class="project-pictures">
  <% @project.pictures.each do |picture| %>
    <section class="picture">
      <%= image_fu picture.image, "900x100000" %>
    </section>
  <% end %>
</section>

<section class="project-copyright">
  <p>
    <%= raw @project.copyright %>
  </p>
</section>

<section class="project-likes">
  <script type="text/javascript" src="//yandex.st/share/share.js" charset="utf-8"></script>
  <div class="yashare-auto-init" data-yashareL10n="en" data-yashareQuickServices="vkontakte,facebook,twitter" data-yashareTheme="counter"></div>
</section>

<% content_for :third_column do %>
  <h2><%= t('.other') %></h2>
  <ul class="projects-list">
    <% @projects.each do |project| %>
      <li class="<%= 'selected' if project == @project %>">
        <%= link_to project.title, refinery.projects_project_path(project) %>
      </li>
    <% end %>
  </ul>
<% end %>
